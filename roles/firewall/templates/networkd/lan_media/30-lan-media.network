[Match]
Name={{ lan_media_iface }}

[Link]
RequiredForOnline=no

[Network]
ConfigureWithoutCarrier=yes
Address={{ lan_media_router_ip_address }}
DHCPv6PrefixDelegation=yes
LinkLocalAddressing=ipv6
IPv6LinkLocalAddressGenerationMode=eui64
LLMNR=true
MulticastDNS=true
LLDP=true
EmitLLDP=nearest-bridge
IPv6AcceptRA=false
IPv6SendRA=true
DHCPServer=true

[DHCPv6PrefixDelegation]
Assign=true
Announce=true
Token=::1
SubnetId=2

[DHCPServer]
EmitDNS=yes
PoolOffset={{ lan_media_dhcp_pool_offset }}
PoolSize={{ lan_media_dhcp_pool_size }}
DNS={{ lan_media_address }}
EmitRouter=yes
#EmitNTP=yes
{% for ntp_server in ntp_servers %}
#NTP={{ ntp_server }}
{% endfor %}
EmitTimezone=yes
Timezone=America/New_York
DefaultLeaseTimeSec=3600
MaxLeaseTimeSec=43200

[IPv6SendRA]
RouterPreference=high
RouterLifetimeSec=120
EmitDomains=true
EmitDNS=true
DNS=_link_local
Domains={{ domain }}

# Unique Local Address
[IPv6Prefix]
Prefix={{ lan_media_ip6_ula_cidr }}
PreferredLifetimeSec=86400
ValidLifetimeSec=604800
Assign=true

[IPv6RoutePrefix]
Route={{ ip6_ula_cidr }}
LifetimeSec=120